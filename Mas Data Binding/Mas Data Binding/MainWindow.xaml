<Window x:Class="Mas_Data_Binding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mas_Data_Binding"
        mc:Ignorable="d"
        Title="Mas de Data Binding" Height="450" Width="800">
    <Grid>

        <StackPanel Name="Display">

            <StackPanel Orientation="Horizontal" Margin="50,50,0,0">
                <TextBlock Text="Nombre: " Margin="10" Width="100"/>
                <TextBlock Margin="10" Width="100" Text="{Binding Nombre}"/>
                
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="50,50,0,0">
                <TextBlock Text="Titulo: " Margin="10" Width="100"/>
                <TextBlock Margin="10" Width="100" Text="{Binding Titulo}"/>

            </StackPanel>

        </StackPanel>
        
    </Grid>
</Window>
